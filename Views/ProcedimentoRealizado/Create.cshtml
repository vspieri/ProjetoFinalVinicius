@model ProjetoFinalVinicius.Models.ProcedimentoRealizado

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>ProcedimentoRealizado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProcedimentoId" class="control-label"></label>
                <select asp-for="ProcedimentoId" class ="form-control" asp-items="ViewBag.ProcedimentoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ColaboradorId" class="control-label"></label>
                <select asp-for="ColaboradorId" class ="form-control" asp-items="ViewBag.ColaboradorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocalRealizacaoId" class="control-label"></label>
                <select asp-for="LocalRealizacaoId" class ="form-control" asp-items="ViewBag.LocalRealizacaoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataRealizadoId" class="control-label"></label>
                <input asp-for="DataRealizadoId" class="form-control" />
                <span asp-validation-for="DataRealizadoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObservacaoRealizadoId" class="control-label"></label>
                <input asp-for="ObservacaoRealizadoId" class="form-control" />
                <span asp-validation-for="ObservacaoRealizadoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
